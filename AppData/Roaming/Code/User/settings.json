        "odroid": "linux"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.bracketPairColorization.enabled": true,
    "workbench.colorTheme": "Monokai",
    "files.associations": {
        "*.v": "systemverilog",
        "*.gfv": "systemverilog",
        "*.tda": "systemverilog",
        "*.env": "shellscript",
        ".local.shellrc": "shellscript",
        ".shellrc": "shellscript",
        "*.c": "c",
        "*.s": "arm",
        "*.su": "plaintext",
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "editor.unicodeHighlight.invisibleCharacters": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.docker.image.latex": "blang/latex",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "markdown-pdf.margin.top": "1in",
    "markdown-pdf.margin.right": "1in",
    "markdown-pdf.margin.left": "1in",
    "markdown-pdf.margin.bottom": "1in",
    "markdown-pdf.scale": 0.8,
    "git.suggestSmartCommit": false,
    "notebook.outputLineHeight": 1.2,
    "workbench.editor.enablePreview": false,
    "workbench.editorAssociations": {
        "*.svg": "svgPreviewer.customEditor"
    },
    "svg.preview.transparencyGrid": false,
    "svg.preview.boundingBox": false,
    "cSpell.language": "en,no,de",
    // "cSpell.enabled": false,
    "cSpell.enabledLanguageIds": [
        "latex"
    ],
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.renderWhitespace": "none",
    "cmake.configureOnOpen": true,
    "cSpell.userWords": [
        "clearify",
        "datasheet",
        "microcontroller",
        "perfectioning"
    ],
    "workbench.iconTheme": "Monokai Classic Icons",
    "files.exclude": {
        "**/.trunk/*out/": true,
        "**/.trunk/*actions/": true,
        "**/.trunk/*logs/": true,
        "**/.trunk/*plugins/": true
    },
    "trunk.trunkGrayOutNonBlockingIssues": false,
    "files.watcherExclude": {
        "**/.trunk/*out/": true,
        "**/.trunk/*actions/": true,
        "**/.trunk/*logs/": true,
        "**/.trunk/*plugins/": true
    },
    "editor.defaultFormatter": "trunk.io",
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "black",
    "gitlens.currentLine.enabled": false,
    "window.newWindowDimensions": "maximized",
    "workbench.startupEditor": "none",
    "window.title": "${rootName}${separator}${dirty}${activeEditorShort}${separator}${profileName}",
    "latex-workshop.latex.rootFile.indicator": "\\begin{document}",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "workbench.list.openMode": "doubleClick",
    "workbench.activityBar.visible": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.wordBasedSuggestions": false,
