alias ri=riverctl
# alias ris='riverctl spawn'
if command -v riverctl > /dev/null
then
    ris() {
        riverctl spawn-tagmask 10
        riverctl spawn "$@"
        riverctl close
    }
fi

alias copy-wsl='win32yank.exe -i'
